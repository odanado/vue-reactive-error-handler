{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "types": [
      "@types/node",
      "@types/jest",
      "@nuxt/types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.spec.ts",
    "./example/**/*"
  ]
}